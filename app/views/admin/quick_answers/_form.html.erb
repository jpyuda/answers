<%= render :partial => 'shared/pagedown' %>

<%= semantic_form_for [:admin, @quick_answer] do |f| %>
 <%= f.inputs "Quick Answer Details" do %>
    <%if current_user.is_moderator%>
      <%= f.input :is_published, :label => "Publish?"%>
    <% end %>
    <%=f.input :title %>
    <%=f.input :preview, :input_html => { :rows => 4 } %>
    <%=f.input :category %>
    <%=f.input :contact %>
    <%=f.input :tags, :as => :string %>
    <%=f.input :author_link %>
    <%=f.input :author_pic %>
    <%=f.input :author_name %>
    <div id="wmd-button-bar" style="padding-left: 20%;"></div>
    <%=f.input :content_md, :label => "Content", :input_html => { :class => 'wmd-input', :id => 'wmd-input'} %>
  <%end%>
  <%=f.buttons :commit %>
<% end %>

<div id="wmd-preview" class="wmd-panel wmd-preview"></div>