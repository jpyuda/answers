<%= render :partial => 'shared/pagedown' %>

<%= semantic_form_for [:admin, @guide] do |f| %>
    <%= f.inputs "Guide Details" do %>
    <%if current_user.is_moderator%>
      <%= f.input :is_published, :label => "Publish?"%>
    <% end   %>  
    <%=f.input :title %>

    <%=f.input :preview %>
    <%=f.input :category %>
    <%=f.input :contact %>
    <%=f.input :tags, :as => :string %>
    <%=f.input :author_link %>
    <%=f.input :author_pic %>
    <%=f.input :author_name %>
    <!-- this will be hidden  -->
    <%=f.input :content_md %>
  <%end%>
  <%=f.buttons :commit %>
<% end %>

<div class="wmd-panel">
  <div id="wmd-button-bar"></div>
  <textarea class="wmd-input" id="wmd-input"></textarea>
</div>
<div id="wmd-preview" class="wmd-panel wmd-preview"></div>