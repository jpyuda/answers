<div class="page-container search">
  <div class="row">
    <div class="span9">
      <div class="main-content">
        <div class="header">
          <h1>Search results for: &ldquo;<strong><%=@query%></strong>&rdquo;</h1>
          <% if @query_corrected %>
            <div class="suggestion">(did you mean: "<a href ='/search?q=<%=@query_corrected%>'><%=@query_corrected%></a>"?)</div>
          <% end -%>
          <!-- <div class="count"><%=@results.count %> results found</div> -->
        </div>
        <% if @results.count == 0 %>
          <p>Sorry, no results found for <b><%=@query%></b>.  Please try entering less specific search terms.</p>
        <% end %>
        <ul>
          <% @results.each do |article| %>
            <% #next unless article.is_published %>
            <li class="article-listing">
              <%= content_tag( :h1, link_to( article.title, article_path(article.id) ) ) %>
              <p class="preview"><%= article.preview %></p>
            </li>
          <% end %>
        </ul>
      </div>
    </div>
    <div class="span3">
      <div class="sidebar">
        <div class="sidebar-unit">
          <h4 class="side-head">Other Categories</h4>
          <div class="sidebar-content">
            <ul>
              <li><a href="#">Driver License</a></li>
              <li><a href="#">City Jobs</a></li>
              <li><a href="#">Camping</a></li>
              <li><a href="#">Car Registration</a></li>
              <li><a href="#">Transportation</a></li>
            </ul>
          </div>
        </div>
      </div>
    </div><!-- /span3 -->
  </div>
</div>