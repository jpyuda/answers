<div id="topPattern"></div>
<div id="navigation">
  <%= render :partial => 'shared/search_form' %>
</div>

<div id="content">
  <div id="results">
      Search results for: "<strong><%=@query%></strong>"<br />
      <% unless @query_corrected == @query %>
        Did you mean "<strong><%=@query_corrected%></strong>"?<br />
      <% end -%>
      <%=@results.count %> results found<br />
    </div>
    <ul>
      <% @results.each do |article| %>
        <li>
          <%= content_tag( :h1, link_to( article.title, article_path(article.id) ) ) %>
          <div class="preview"><%= article.preview %></div>
        </li>
      <% end %>
    </ul>


  </div> 
</div>