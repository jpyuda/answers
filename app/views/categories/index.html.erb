<div id="navigation">
  <%= render :partial => 'shared/search_form' %>
</div>
<div class="row">
  <div class="span12">
    <div class="page-container">
      
      <div class="row">
        <div class="span9">
          <div class="main-content">
            <div class="header"><h1>Listing of All Categories</h1></div>
            <ul>
              <% @categories.each do |category| %>
                <li class="category-listing">
                  <%= content_tag( :h2, link_to( category.name, category_path(category.id) ) ) %>
                  <p class="preview"><%= category.description %></p>
              </li>
              <% end -%>
            </ul>
          </div>
        </div>
        <div class="span3">
          <div class="sidebar">
            <div class="sidebar-unit">
              <h4 class="side-head">Other Categories</h4>
              <div class="sidebar-content">
                <ul>
                  <li><a href="#">Driver License</a></li>
                  <li><a href="#">City Jobs</a></li>
                  <li><a href="#">Camping</a></li>
                  <li><a href="#">Car Registration</a></li>
                  <li><a href="#">Transportation</a></li>
                </ul>
              </div>
            </div>
          </div>
        </div><!-- /span3 -->
      </div>
    </div> 
  </div>