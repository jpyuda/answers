<div id="navigation">
  <%= render :partial => 'shared/search_form' %>
</div>
<div class="row">
  <div class="span12">
    <div class="page-container">
      
      <div class="row">
        <div class="span9">
          <div class="main-content">
            <div class="categories"><h1>Listing of All Articles</h1></div>
            <br/>
            <% @categories.each do |category| %>
              <div class="article-category">
                <h1>
                  <a name="<%= category.name.parameterize %>"><%= category.name %></a>
                </h1>
                <% category.articles_by_access_count.each do |article| %>
                  <ul>
                    <% next unless article.is_published %>
                      <h3><%= content_tag( :li, link_to( article.title, article_path(article.slug) ) ) %></h3>
                  </ul>
                <% end -%>
              </div>
            <% end -%>
          </div>
        </div>
        <div class="span3">
          <div class="sidebar">
            <div class="sidebar-content">
              <h2 class="sidebar">Other Categories</h2>
              <ul>
                <li>Driver License</li>
                <li>City Jobs</li>
                <li>Camping</li>
                <li>Car Registration</li>
                <li>Transportation</li>
              </ul>
            </div>
          </div>
        </div>
      </div>
    </div> 
  </div>
</div>
